<aura:component controller="ContactController">
    <aura:attribute name="contactRec" type="Contact"/>
    <aura:attribute name="newEditContact" type="Contact" default="{}"/>
    <aura:attribute name="renderCard" type="boolean" default="false"/>
    <aura:handler name="createNewContact" event="c:contactItemEdit"
                  action="{!c.handleCreateContact}"/>
    <aura:handler name="updateContact" event="c:contactItemEdit"
                  action="{!c.handleUpdateContact}"/>
    <!-- PAGE HEADER -->
    <lightning:layout class="slds-page-header slds-page-header--object-home">
        <lightning:layoutItem>
            <lightning:icon iconName="standard:scan_card" alternativeText="My Contacts"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">Contacts</h1>
                <h2 class="slds-text-heading--medium">My Contact</h2>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / PAGE HEADER -->
    <!-- NEW Contact FORM -->
    <lightning:layout>
        <lightning:layoutItem padding="around-small" size="3">
            <c:contactForm newContact="{!v.newEditContact}" aura:id="newcontact"/>
        </lightning:layoutItem>
        
        <lightning:layoutItem padding="around-small" size="3">
            <aura:if isTrue='{!v.renderCard}'>
                <c:contactItem contactRecord="{!v.contactRec}" />
            </aura:if>
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / NEW Contact FORM -->
    <lightning:layout>
        
    </lightning:layout>
</aura:component>